{
    "name": "willypuzzle/laravel-permission",
    "description": "Permission and sections handling for Laravel 5.4 and up",
    "keywords": [
        "spatie",
        "laravel",
        "permission",
        "acl",
        "security"
    ],
    "homepage": "https://github.com/willypuzzle/laravel-permission",
    "license": "MIT",
    "authors": [
        {
            "name": "Freek Van der Herten",
            "email": "freek@spatie.be",
            "homepage": "https://spatie.be",
            "role": "Developer"
        },
        {
            "name": "Domenico Rizzo",
            "email": "domenico.rizzo@gmail.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php" : ">=7.0",
        "illuminate/auth": "~5.3.0|~5.4.0|~5.5.0",
        "illuminate/container": "~5.3.0|~5.4.0|~5.5.0",
        "illuminate/contracts": "~5.3.0|~5.4.0|~5.5.0",
        "illuminate/database": "~5.4.0|~5.5.0"
    },
    "require-dev": {
        "monolog/monolog": "^1.22",
        "orchestra/testbench": "~3.3.0|~3.4.2|~3.5.0",
        "phpunit/phpunit" : "^5.7|6.2"
    },
    "autoload": {
        "psr-4": {
            "Idsign\\Permission\\": "src"
        },
        "files": [
            "src/helpers.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Idsign\\Permission\\Test\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit --debug"
    },
    "config": {
        "sort-packages": true
    },
    "extra": {
        "laravel": {
            "providers": [
                "Idsign\\Permission\\PermissionServiceProvider"
            ]
        }
    }
}
